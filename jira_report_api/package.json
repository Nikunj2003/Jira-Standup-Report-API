{
  "name": "jira_report_api",
  "version": "1.0.0",
  "description": "A TypeScript-based cron job scheduler for generating AI-powered Jira standup reports, built with Express API and Zod validation.",
  "main": "src/server.ts",
  "scripts": {
    "start": "node build/server.js",
    "dev": "nodemon",
    "build": "rimraf build && tsc --build && tsc-alias",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky || true",
    "test": "jest"
  },
  "keywords": [
    "Node.js",
    "Express",
    "Typescript",
    "Zod",
    "Prisma",
    "Jest",
    "Morgan",
    "Winston",
    "Prettier",
    "ESLint",
    "Husky"
  ],
  "author": "Nikunj Khitha",
  "license": "MIT",
  "dependencies": {
    "@azure/storage-blob": "^12.25.0",
    "ansi-to-html": "^0.7.2",
    "applicationinsights": "^3.3.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "cron": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "marked": "^15.0.7",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "axios-mock-adapter": "^2.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1"
  },
  "overrides": {
    "glob": "11.0.0",
    "rimraf": "^4.0.0"
  }
}
